{
  "version": 2,
  "buildCommand": "cd server && npm install",
  "outputDirectory": "server",
  "routes": [
    {
      "src": "/api/cleanup-unused-images",
      "dest": "/server/api/cleanup-unused-images.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "/server/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/server/server.js"
    }
  ],
  "crons": [
    {
      "path": "/api/cleanup-unused-images",
      "schedule": "3 2 * * *"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}

